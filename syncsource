#!/bin/bash
#
cd $HOME

# Configure Git
git config --global color.ui true
git config --global user.name ZunayedDihan
git config --global user.email zunayeddihan@gmail.com

# Git Haxxx xD
echo "${git_cookies}" > ~/git_hax.sh
bash ~/git_hax.sh && rm ~/git_hax.sh

# Repo init and sync
repo init -u https://github.com/AICP/platform_manifest.git -b r11.1 --no-repo-verify -g default,-device,-mips,-darwin,-notdefault

# Start repo sync
repo sync -j `nproc`

# Purge repo
rm -rf .repo

# Notify In telegram
telegram -M "*AICP Compile Status*: \`DEVICE RESOURCE PULLING STARTED!\`.
*Started at*:- \`$(date)\`."

rm -rf device/generic/opengl-transport

# Pull Device Sources
git clone --depth=1 https://github.com/Hotorou/device_xiaomi_daisy -b aicp device/xiaomi/daisy
git clone --depth=1 https://github.com/Hotorou/vendor_xiaomi_daisy -b lineage-18.1 vendor/xiaomi/daisy
git clone --depth=1 https://github.com/lupesoltec/vendor_MiuiCamera.git -b daisy vendor/MiuiCamera
git clone --depth=1 https://github.com/acras01/android_kernel_xiaomi_daisy -b arrow-11.0 kernel/xiaomi/msm8953

